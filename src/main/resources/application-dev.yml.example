# 开发环境配置
# ⚠️ 重要：请复制此文件为 application-dev.yml 并填入真实配置
server:
  port: 8080

spring:
  datasource:
    type: com.alibaba.druid.pool.DruidDataSource
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://${DB_HOST:localhost}:${DB_PORT:3306}/${DB_NAME:management_db}?useUnicode=true&characterEncoding=utf-8&useSSL=false&serverTimezone=Asia/Shanghai
    username: ${DB_USERNAME:root}
    password: ${DB_PASSWORD:your_password}
    druid:
      initial-size: 5
      min-idle: 5
      max-active: 20
      max-wait: 60000
      validation-query: SELECT 1
      test-while-idle: true
      test-on-borrow: false
      test-on-return: false

  redis:
    host: ${REDIS_HOST:localhost}
    port: ${REDIS_PORT:6379}
    password: ${REDIS_PASSWORD:}
    timeout: 6000ms
    lettuce:
      pool:
        max-active: 8
        max-idle: 8
        min-idle: 0
        max-wait: -1ms

# 阿里云OSS配置
aliyun:
  oss:
    endpoint: ${OSS_ENDPOINT:https://oss-cn-beijing.aliyuncs.com}
    access-key-id: ${OSS_ACCESS_KEY_ID:your_access_key_id}
    access-key-secret: ${OSS_ACCESS_KEY_SECRET:your_access_key_secret}
    bucket-name: ${OSS_BUCKET_NAME:your_bucket_name}
    region: ${OSS_REGION:cn-beijing}

# 火山引擎Ark API配置
volcengine:
  ark:
    api-key: ${ARK_API_KEY:your_api_key}
    base-url: ${ARK_BASE_URL:https://ark.cn-beijing.volces.com/api/v3}
    image-model: ${ARK_IMAGE_MODEL:doubao-seedream-4-5-251128}
    video-model: ${ARK_VIDEO_MODEL:doubao-video}

# 文件上传配置
file:
  upload:
    temp-path: /tmp/management/upload
    max-size: 100MB
    allowed-types: image/jpeg,image/png,image/gif,video/mp4,text/plain

# 任务处理配置
task:
  poll-interval: 10
  max-retry: 3
  timeout-minutes: 30
